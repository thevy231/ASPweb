
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <form asp-action="Search" method="get">
        <input type="text" name="searchString"
               value="@ViewBag.SearchString" />
        <input type="submit" value="Tìm kiếm" />
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Tên khách hàng</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        @foreach (var item in ViewBag.Customer)
        {
            <tbody>
                <tr>
                    <td width="20%">@item.Customer_name</td>
                    <td width="20%">@item.Address</td>
                    <td width="20%">@item.PhoneNumber</td>
                    <td width="20%">@item.Email</td>
                    <td width="20%">
                        <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a>|
                        <a asp-action="Detail" asp-route-id="@item.CustomerId">Detail</a>|
                        <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
    <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Thêm</a>

</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}